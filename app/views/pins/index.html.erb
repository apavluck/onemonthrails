<% if user_signed_in? %>
<h1>Listing pins</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Description</th>
      <th>Controls:</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	  <% @pins.each do |pin| %>
	   <tr>
	    <!-- Creates embedded ruby loop -->
    	<% if pin.user == current_user %>
	        <!-- will show email if not null -->
	        <td><%= pin.user.email if pin.user %></td>
	        <td><%= pin.description %></td>
	        <!--<td><%= link_to 'Show', pin %></td>-->
	        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
	        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
<% else %>
<h1> You must be logged in to view your pins </h1>
<% end %>
